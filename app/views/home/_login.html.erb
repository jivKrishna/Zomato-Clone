<div class="modal fade mt-6" id="loginAccountModal" tabindex="-1" role="dialog" aria-labelledby="loginAccountModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="loginAccountModalLabel">Sign up or log in to Zomato</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= link_to "https://www.facebook.com", class: "facebook" do %>
            <i class="fab fa-facebook-f fa-2x text-white mt-2"></i>
            <span class="text-white align-text-bottom margin-center">Continue with Facebook</span>
        <% end %>

        <%= link_to "https://contacts.google.com", class: "google" do %>
            <%= image_tag "google_icon.png", class: "icon mt-2" %>
            <span class="text-secondary align-text-bottom margin-center">Continue with Google</span>
        <% end %>
      </div>
    </div>
  </div>
</div>