<div class="container-fluid banner">
  <div class="container" id="user">
    <div id="verify" class="float-right mt-2">
      <% if signed_in? %>
        <div class="dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= image_tag current_user.image, class: "icon rounded-circle" %>
            <%= current_user.name.split.first.upcase %>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to "Log Out", "sign_out", method: :delete, class: "dropdown-item" %>
            <% unless is_admin? %>
              <%= link_to "Become Admin", admin_registration_path, class: "btn btn-danger" %>
            <% end %>
            <%= link_to "Profile", profile_path(current_user) %>
            <a class="dropdown-item" href="#">Something else here</a>
          </div>
        </div>
      <% else %>
        <button type="button" class="btn text-white" data-toggle="modal" data-target="#loginAccountModal">Log In as Viewer</button>
        <%= render "login" %>

        <button type="button" class="btn text-white" data-toggle="modal" data-target="#signupAccountModal">Log In as Admin</button>
        <%= render "signup" %>
      <% end %>
    </div>
  </div>
</div>
