<div class="container container-size">
  <div class="row">
    <div class="col-md-7">
      <div class="container-border bg-white my-4 py-2 px-3">
        <small class="text-uppercase text-secondary">Order food online from</small>
        <h4 class="font-weight-bold"><%=link_to @restaurant.name, @restaurant, class: "text-dark" %></h4>
        <p class="text-secondary"><%= @restaurant.address %></p>
      </div>
    </div>

    <% if is_admin? %>
      <div class="col-md-4">
        <div class="container-border bg-white mx-3 my-4 p-3">
          <%= render "food_items/form" %>
        </div>
      </div>
    <% end %>
  
    <div class="col-md-7 container-border py-3">
      <% @food_categories.each do |food_category| %>
        <% if food_category.food_items.where(restaurant_id: params[:restaurant_id]).present? %>
          <h5 class="font-weight-bold text-primary"><%= food_category.name %></h5>
          <table class="table">
            <thead class="text-center">
              <th scope="col">Item Name</th>
              <th scope="col">Price</th>
              <th scope="col">Order quantity</th>
            </thead>
            <tbody class="bg-white">
              <% food_category.food_items.where(restaurant_id: params[:restaurant_id]).each do |food_item| %>
                <tr>
                  <td>
                    <%= link_to restaurant_food_item_path(food_item.restaurant ,food_item), class: "text-dark" do %>
                      <% if food_item.veg? %>
                        <%= image_tag "veg-icon.png", class: "veg-icon" %>
                      <% else %>
                        <%= image_tag "nonveg-icon.png", class: "nonveg-icon" %>
                      <% end %>
                     
                      <%= food_item.name %>
                    <% end %>
                  </td>
                  <td><%= number_to_currency( food_item.price ) %></td>
                  <td align="right">
                    <%= form_for( [ food_item.restaurant, food_item, current_order.order_items.build ] ) do  |f| %>
                      <%= f.number_field :quantity, min: 1, placeholder: "Enter quantity", class: "quantity-input" %>
                      <%= f.submit "Add to Cart", class: "btn btn-success" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
      <% end %>
    </div>

    <div class="col-md-5">
      <% if current_order.order_items.count > 0 %>
        <div class="container-border">
          <h5 class="font-weight-bold text-center my-2">
            <i class="fas fa-shopping-cart text-primary"></i>
            Food-Cart Details:
          </h5>
          <div class="cart-height overflow-auto">
            <table class="table container-border bg-white py-3" id="order">
              <thead>
                <tr>
                  <th scope="col">Food Item</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Price</th>
                  <th scope="col">Edit</th>
                  <th scope="col">Remove</th>
                </tr>
              </thead>
              <tbody>
                <% @order_items.each do |order_item| %>
                  <tr>
                    <td>
                      <%= link_to restaurant_food_item_path(order_item.food_item.restaurant, order_item.food_item), class: "text-dark" do %>
                        <% if order_item.food_item.veg? %>
                          <%= image_tag "veg-icon.png", class: "veg-icon" %>
                        <% else %>
                          <%= image_tag "nonveg-icon.png", class: "nonveg-icon" %>
                        <% end %>
                        <%= order_item.food_item.name %> 
                      <% end %>   
                    </td>
                    <td><%= order_item.quantity %></td>
                    <td align="right"><%= number_to_currency (order_item.sub_total) %></td>
                    <td>
                      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#update_order_food_<%= order_item.id %>">
                        <i class="fas fa-edit"></i>
                      </button>
                      <%= form_for( [ order_item.food_item.restaurant, order_item.food_item, order_item ] ) do  |f| %>
                        <div class="modal fade my-5" id="update_order_food_<%= order_item.id %>" tabindex="-1" role="dialog" aria-labelledby="newcategoryModalLabel" aria-hidden="true">
                          <div class="modal-dialog modal-sm" role="document">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title font-weight-bold" id="newcategoryModalLabel">Fix Quantity</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                              <div class="modal-body">
                                <div class="form-group required">
                                  <%= f.number_field :quantity, min: 1, class: "quantity-input" %>
                                </div>

                                <%= f.submit "Update", class: "btn btn-danger" %>
                              </div>
                            </div>
                          </div>
                        </div>
                      <% end %>
                    </td>
                    <td>
                      <%= link_to [ order_item.food_item.restaurant, order_item.food_item, order_item ], method: :delete, class: "btn btn-danger", title: "Remove Item" do %>
                        <i class="fas fa-trash-alt"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <div class="text-center">
            <h5 class="font-weight-bol">Total Price : <%= number_to_currency current_order.total_price %></h5>
            <%= link_to "Place Order", restaurant_place_order_path(@restaurant), class: "btn btn-success my-3" %>
            
          </div>
        </div>
      <% end %>
    </div>
  </div>
  
</div>