<div class="container container-size container-border my-4 bg-white">
  <div class="profile text-center mt-4">
    <div class="row">
      <div class="col-6">
        <%= image_tag @user.image.url, class: "pics rounded-circle float-right mt-3" %>
      </div>
      <div class="col-6 mt-5">
        <h3 class="nm-text text-left"><%= @user.name %></h3>
        <i class="fas fa-map-marker-alt"></i>
      </div>
    </div>
  </div>
</div>

<div class="container container-size my-4">
  <div class="row">
    <div class="col-md-3">
      <ul class="navbar-nav bg-white container-border px-2 mx-n3">

        <li class="nav-item active-link link" id="chngName">
          <a class="nav-link" href="#name">Change Profile name</a>
        </li>

        <li class="nav-item active-link link" id="chngImage">
          <a class="nav-link" href="#image">Change Profile image</a>
        </li>

        <li class="nav-item active-link link" id="chngPhone">
          <a class="nav-link" href="#phone_number">Change Profile phone number</a>
        </li>

        <li class="nav-item active-link link" id="chngPassword">
          <a class="nav-link" href="#password">Change Profile password</a>
        </li>
      </ul>
    </div>


    <div class="col-md-6 ml-3">
      <div class="container-border bg-white p-3 mx-n3" id="changeContainer">
        <%= form_for @user do |f| %>

          <% if @user.errors.any? %>
            <% @user.errors.full_messages.each do |message| %>
              <p class="text-danger"><%= message %></p>
            <% end %>
          <% end %>

          <div id="name">
            <div class="form-group">
              <%= f.label :name, "Change profile name" %>
              <%= f.text_field :name, class: "form-control-file" %>
            </div>
          </div>
          <div id="image">
            <div class="form-group">
              <%= f.label :image, "Change profile image" %>
              <%= f.file_field :image, class: "form-control-file" %>
            </div>
          </div>
          <div id="phone_number">
            <div class="form-group">
              <%= f.label :phone_number, "Change phone number" %>
              <%= f.text_field :phone_number, placeholder: "Enter valid Phone number", class: "form-control" %>
            </div>
          </div>
          <div id="password">
            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, class: "form-control-file" %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, class: "form-control-file" %>
            </div>
          </div>

          <div id="btn">
            <%= f.submit "Update", class: "btn btn-danger" %>
            <%= link_to "Back", profile_path(@user), class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
