<div class="container container-size container-border my-4 bg-white">
  <div class="profile text-center mt-4">
    <div class="row">
      <div class="col-6">
        <%= image_tag @user.image.url, class: "pics rounded-circle float-right mt-3" %>
      </div>
      <div class="col-6 mt-5">
        <h3 class="nm-text text-left"><%= @user.name %></h3>
        <i class="fas fa-map-marker-alt"></i>
      </div>
    </div>
  </div>
</div>

<div class="container container-size">
  <div class="row">
    <div class="col-md-6">
      <div class="container-border bg-white my-2 p-3 mx-n3">
        <%= form_for @user do |f| %>

          <% if @user.errors.any? %>
            <% @user.errors.full_messages.each do |message| %>
              <p class="text-danger"><%= message %></p>
            <% end %>
          <% end %>

          <div class="form-group">
            <%= f.label :image, "Change profile image" %>
            <%= f.file_field :image, class: "form-control-file" %>
          </div>

          <div class="form-group">
            <%= f.label :phone_number, "Change phone number" %>
            <%= f.text_field :phone_number, placeholder: "Enter valid Phone number", class: "form-control" %>
          </div>

          <%= f.submit "Update", class: "btn btn-danger" %>
          <%= link_to "Back", profile_path(@user), class: "btn btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>