<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#update_category_<%= restaurant_category.id %>">
  <i class="fas fa-edit"></i>
</button> 

<div>
  <%= form_for(restaurant_category) do |f| %>
    <div class="modal fade my-5" id="update_category_<%= restaurant_category.id %>" tabindex="-1" role="dialog" aria-labelledby="newcategoryModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title font-weight-bold" id="newcategoryModalLabel">Change Category Name</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="form-group required">
              <%= f.label :name, class: "control-label" %>
              <%= f.text_field :name, class: "form-control", required: true %>
            </div>

            <%= f.submit "Update", class: "form-control btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>