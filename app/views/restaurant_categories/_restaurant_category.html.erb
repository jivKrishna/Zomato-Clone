<div class="col-md-3 text-center" id="restaurant_category_<%= restaurant_category.id %>">
  <div class="container-border bg-white my-2 p-2">
    <p><%= restaurant_category.name %></p>

    <div class="btn-group">
      <button type="button" class="btn btn-success" data-toggle="modal" data-target="#update_category_<%= restaurant_category.id %>">Edit
      </button> 
      
      <%= link_to "Delete", restaurant_category, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>


  <%= form_for(restaurant_category, method: :put, remote: true) do |f| %>
    <div class="modal fade my-5" id="update_category_<%= restaurant_category.id %>" tabindex="-1" role="dialog" aria-labelledby="newcategoryModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title font-weight-bold" id="newcategoryModalLabel">Add Category</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="form-group required">
              <%= f.label :name, class: "control-label" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>
          <div class="modal-footer">
            <%= f.submit "Add", class: "form-control btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>