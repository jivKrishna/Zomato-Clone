<div class="container container-size">
  <div class="text-center my-4 mx-3">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newcategory">
      Add New Category
    </button>
  </div>

  <div class="row">
    <div class="col-md-8">
      <div class="row container-size" id="container_category">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Edit/remove</th>
            </tr>
          </thead>
          <tbody>
            <% @restaurant_categories.each do |restaurant_category| %>
              <tr>
                <td><%= restaurant_category.name %></td>
                <td class="btn-group">
                  <%= render @restaurant_category %>

                  <%= link_to restaurant_category, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" do %>
                    <i class="fas fa-trash-alt"></i>
                  <% end %>

                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div>
  <%= form_for(@restaurant_category) do |f| %>
    <div class="modal fade my-5" id="newcategory" tabindex="-1" role="dialog" aria-labelledby="newcategoryModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title font-weight-bold" id="newcategoryModalLabel">Add Category</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="form-group required">
              <%= f.label :name, class: "control-label" %>
              <%= f.text_field :name, placeholder: "Enter Category name: ", class: "form-control category_name" %>
            </div>
            <%= f.submit "Add", class: "form-control btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>