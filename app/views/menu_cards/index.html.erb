<div class="container container-size">
  <div class="row">
    <div class="col-md-8">
      <div class="container-border bg-white my-4 py-2 px-3">
        <small class="text-uppercase text-secondary">View Food Menu cards</small>
        <h4 class="font-weight-bold"><%=link_to @restaurant.name, @restaurant, class: "text-dark" %></h4>
        <p class="text-secondary"><%= @restaurant.address %></p>
      </div>
    </div>

    <div class="col-md-4 my-4">
      <%= render "form" %>
    </div>
  </div>
  <div class="row">
    <div class="row my-4">
      <%= render @menu_cards %>
    </div>
    <%= will_paginate @menu_cards %>
  </div>
</div>