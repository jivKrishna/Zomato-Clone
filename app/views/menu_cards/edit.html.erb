<% @page_title = "Edit Menu Card" %>

<div class="container">
  <div class="container-size">
    <div class="row">
      <div class="col-md-8 bg-white container-border my-4 py-3">
        <%= form_for [ @restaurant, @menu_card ], html: { multipart: true } do |f| %>
  
          <% if @restaurant.errors.any? %>
            <% @restaurant.errors.full_messages.each do |message| %>
              <p class="text-danger"><%= message %></p>
            <% end %>
          <% end %>
          <div class="form-group required">
            <%= f.label :image, "Upload Menu Card", class: "control-label" %>
            <%= f.file_field :image, class: "form-control-file" %>
          </div>

          <div class="form-group required">
            <%= f.label :description, class: "control-label" %>
            <%= f.text_area :description, row: 5, placeholder: "Write some words about this menu card ( minimum 100 characters! )", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit "Update Menu Card", class: "btn btn-danger" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>