<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#addMenuCard">
  Add Menu Card
</button>

<%= form_for [@restaurant, @restaurant.menu_cards.build], html: { multipart: true } do |f| %>
  <div class="modal fade" id="addMenuCard" tabindex="-1" role="dialog" aria-labelledby="addfoodLabel" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title font-weight-bold" id="addfoodLabel">Add a Menu Card</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <% if @restaurant.menu_cards.build.errors.any? %>
            <div class="form-group">
              <% @restaurant.menu_cards.build.errors.full_messages.each do |msg| %>
                <p class="text-danger"><%= msg %></p>
              <% end %>
            </div>
          <% end %>

          <div class="form-group required">
            <%= f.label :image, "Upload Menu Card", class: "control-label" %>
            <%= f.file_field :image, class: "form-control-file", required: true %>
          </div>

          <div class="form-group required">
            <%= f.label :description, class: "control-label" %>
            <%= f.text_area :description, row: 5, placeholder: "Write some words about this menu card ( minimum 50 characters! )", class: "form-control", required: true %>
          </div>

          <div class="form-group">
            <%= f.submit "Add Menu Card", class: "form-control btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>