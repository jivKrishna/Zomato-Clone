<div class="thumbnail mx-n3 container-border bg-white">
  <%= image_tag @restaurant.image.url, class: "responsive img-large rounded-top" %>
  <div class="caption px-3">
    <div >
      <h2><%= link_to @restaurant.name, @restaurant, class: "text-dark font-weight-bold" %></h2>
      <h5 class=" text-right text-dark">
        <span class="font-weight-bold h4 text-white bg-success rounded-circle p-2" >
          <%= number_with_precision( @avg_rating, precision: 1 ) %>
          <span class="font-weight-bold h6">/ 5</span>
        </span>
      </h5>
    </div>
    <p class="small"><%= @restaurant.address %></p>
  </div>

  <div class="p-3">
    <%= link_to "Order Food Online", restaurant_foods_path(@restaurant), class: "btn btn-success" %>
  </div>
</div>
  
  