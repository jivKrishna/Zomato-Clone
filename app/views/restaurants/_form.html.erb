<%= form_for @restaurant do |form| %>
  <h2 class="font-weight-bold mt-3">Add a restaurant</h2>
  <h5 class="font-weight-bold">Basic info</h5>
  <div class="basic-info bg-white my-4 py-4 px-3 container-border">
    <% if @restaurant.errors.any? %>
      <% @restaurant.errors.full_messages.each do |message| %>
        <p class="text-danger"><%= message %></p>
      <% end %>
    <% end %>
    <div class="form-group required">
      <%= form.label :name, "RESTAURANT NAME", class: "control-label" %>
      <%= form.text_field :name, placeholder: "Enter Restaurant name", class: "form-control" %>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group required">
          <%= form.label :restaurant_category_id, "RESTAURANT CATEGORY", class: "control-label" %>
          <%= form.select :restaurant_category_id, options_for_select([["select", nil]] + RestaurantCategory.all.pluck(:name, :id)), class: "form-control" %>
        </div>
      </div>
    </div>

    <div id="owner">
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :owner_phone_number, class: "control-label text-uppercase" %>
            <%= form.text_field :owner_phone_number, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :owner_email, class: "control-label text-uppercase" %>
            <%= form.text_field :owner_email, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :phone_number, class: "control-label text-uppercase" %>
          <%= form.text_field :phone_number, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :secondary_phone_number, class: "text-uppercase" %>
          <%= form.text_field :secondary_phone_number, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :city, class: "text-uppercase control-label" %>
          <%= form.text_field :city, placeholder: "Search city", class: "form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :address %>
          <%= form.text_field :address, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.radio_button :serve_alcohal, "yes", checked: true %> Serves alcohal
          <%= form.radio_button :serve_alcohal, "no" %> Doesn't serve alcohal
        </div>
      </div>
    </div>
    
  </div>

    <div class="form-group">
      <%= form.submit "create", class: "form-control btn btn-success" %>
    </div>

<% end %>