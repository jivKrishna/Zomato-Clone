<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#newcategory">
  Add Food Category
</button>
<div>
  <%= form_for(@food_category) do |f| %>
    <div class="modal fade my-5" id="newcategory" tabindex="-1" role="dialog" aria-labelledby="newcategoryModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title font-weight-bold" id="newcategoryModalLabel">Add Category</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="form-group required">
              <%= f.label :name, class: "control-label" %>
              <%= f.text_field :name, placeholder: "Enter Category name: ", class: "form-control category_name" %>
            </div>
            <%= f.submit "Add", class: "form-control btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>