<%= form_for ([@restaurant, @restaurant.foods.build]) do |form| %>
  
  <div class="form-group required">
    <%= form.label :name, class: "control-label" %>
    <%= form.text_field :name, placeholder: "Enter name of food", class: "form-control" %>
  </div>

  <div class="form-group required">
    <%= form.label :description, class: "control-label" %>
    <%= form.text_area :description, placeholder: "Add food description", class: "form-control" %>
  </div>

  <div class="form-group required">
    <%= form.label :image, class: "control-label" %>
    <%= form.file_field :image, placeholder: "Upload an image", class: "form-control-file" %>
  </div>

  <div class="form-group required">
    <%= form.label :price, class: "control-label" %>
    <%= form.text_field :price, placeholder: "Enter the price", class: "form-control" %>
  </div>

  <div class="form-group required">
    <%= form.radio_button :veg, true, checked: true %> <%= form.label :veg_true, "Veg" %>
    <%= form.radio_button :veg, false %> <%= form.label :veg_false, "Non-veg" %>
  </div>

  <div class="form-group">
    <%= form.submit "Add Food", class: "form-control btn btn-danger" %>
  </div>
<% end %>