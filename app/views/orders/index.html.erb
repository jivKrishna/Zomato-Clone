<% @page_title = "My orders" %>

<div class="container container-size">
  <%= link_to "Go Back", :back || current_user, class: "btn btn-secondary my-4" %>
  <%= link_to "Order Food Now", restaurants_path, class: "btn btn-success my-4" %>
  <div class="row">
    <div class="col-md-8">
      <% if @placed_orders.count == 0 %>
        <p class="text-danger">You haven't placed any order now!</p>
      <% else %>
        <h5 class="font-weight-bold text-success">Orders in progress</h5>
        <%= render @placed_orders %>
        <%= will_paginate @placed_orders %>
      <% end %>

      <% if @delivered_orders.present? %>
        <h5 class="font-weight-bold text-primary">Last two delivered orders</h5>
        <%= render @delivered_orders %>
      <% end %>
    </div>
  </div>
</div>