<div class="container container-size">
  <%= link_to "Go and Order", restaurants_path, class: "btn btn-success my-4" %>
  <div class="row">
    <div class="col-md-8">
      <% if @placed_orders.count == 0 %>
        <p class="text-danger">You haven't placed any order till now!</p>
      <% else %>
        <%= render @placed_orders %>
      <% end %>
      <%= will_paginate @placed_orders %>
    </div>
  </div>
</div>